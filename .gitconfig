[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	autocrlf = input
[user]
	name = Laurent Stacul
	email = laurent.stacul@gmail.com
[merge]
	tool = vimdiff
[alias]
	st = status
	co = checkout
	lol = log --pretty=oneline --graph --decorate --branches --remotes --tags
[credential]
	helper = cache --timeout=3600
[color]
	ui = true
[push]
	default = simple
[pull]
	rebase = preserve
[status]
	submoduleSummary = true
[diff]
	submodule = log
